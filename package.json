{
	"name": "@ctx-core/pagination",
	"version": "12.0.12",
	"description": "ctx-core pagination",
	"keywords": [
		"ctx-core",
		"pagination"
	],
	"homepage": "https://github.com/ctx-core/pagination#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/pagination/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/pagination/issues"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"require": "./dist/index.cjs",
		"import": "./dist/index.js"
	},
	"scripts": {
		"build": "npm run clean && npm run copy-mjs && npm run copy-components && npm run compile",
		"clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
		"compile": "./node_modules/.bin/tsc -b .",
		"copy-mjs": "cd dist && echo \"require = require('esm')(module)\nmodule.exports = require('./index.js')\" > index.cjs",
		"copy-components": "cd src && find . | grep \\.svelte$ | awk '{print \"mkdir -p dirname \"$1\" && cp -f \"$1\" ../dist/\"$1}'",
		"exec": "$@",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@ctx-core/array": "workspace:^23.0.8",
		"@ctx-core/dom": "workspace:^11.0.9",
		"@ctx-core/fontawesome": "workspace:^15.0.12",
		"@ctx-core/ripple-effect": "workspace:^12.0.7",
		"@ctx-core/sass": "workspace:^12.0.6",
		"@ctx-core/store": "workspace:^27.0.6",
		"esm": "^3.2.25",
		"svelte": "3.38.3"
	},
	"devDependencies": {
		"@ctx-core/ctx-core-package-tools": "workspace:^8.0.31",
		"typescript": "^4.3.5"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	}
}
